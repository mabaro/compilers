{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(Windows) Launch",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/Debug/clox.exe",
            // "args": ["${workspaceFolder}/tests/test.clox"],
            "args": [ "-run", "var a=1; print a;" ],
            // "args": ["-compile", "-output", "marcos.cloxbin", "-code", "print 1+1;" ],
            // "args": [ "-run", "marcos.cloxbin" ],
            "args": [ "-code", "var a=1; var b=2; if (a>0) print(\">\"); else print(\"<\");" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "console": "externalTerminal"
        },
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/bin/clox",
            "args": [ "-code", "var a=1; var b=2; if (a>0) print(\\\">\\\"); else print(\\\"<\\\");" ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/bin",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ]
        },
    ]
}